{
    "name": "nirvana/nirvana",
    "description": "The core of the shaolin framework",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Nirvana\\": ["src/"]
        },
        "files": ["helpers/web.php","helpers/backend.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\" : ["app"],
            "Tests\\" : ["tests"]
        }
    },
    "authors": [
        {
            "name": "Willy Micieli",
            "email": "micieli@vivaldi.net"
        }
    ],
    "license": ["GPL-3.0-or-later"],
    "require": {
        "symfony/mailer": "^7.0",
        "robmorgan/phinx": "^0.15.5",
        "twig/twig": "^3.8",
        "symfony/console": "^7.0",
        "symfony/process": "^7.0",
        "php-di/php-di": "^7.0",
        "fakerphp/faker": "^1.23",
        "symfony/http-foundation": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10"
    }
}
